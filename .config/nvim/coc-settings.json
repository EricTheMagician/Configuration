{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"args": ["--log-file=/tmp/ccls.log", "-v=1"],
			"filetypes": [ "c", "cpp"],
			"rootPatterns": [".ccls", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls/"
				},
				"client": {
					"snippetSupport": true
				},
				"index": { "onChange": true },
				"highlight": { "lsRanges": true}
			}
		}
	},
	"yaml.format.enable": true,
	"yaml.schemaStore.enable": true
}
